<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Favorites</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/favorite.css" />
</head>
<header>
    <div class="container" id="head">
        <header class="p-3">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/home" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none col-12 col-lg-auto me-lg-auto">
                        <img src="/images/logo.png" alt="" style="width: 100px;" />
                    </a>
                    <form
                        action="/search"
                        class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 justify-content-lg-start"
                        role="search"
                        method="get"
                    >
                        <input
                            type="search"
                            class="form-control form-control-dark text-bg-dark"
                            name="search"
                            placeholder="Search..."
                            aria-label="Search"
                        />
                    </form>
                    <div class="text-end dropdown">
                        <button
                            class="btn btn-outline-light rounded-circle dropdown-toggle"
                            type="button"
                            id="userMenu"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            style="width: 45px; height: 45px; padding: 0; overflow: hidden;"
                        >
                            <img
                                src="/images/user.png"
                                alt="User"
                                class="img-fluid"
                                style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;"
                            />
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end text-center" aria-labelledby="userMenu">
                            <li><a class="dropdown-item" href="/home">Homepage</a></li>
                            <li>
                                <form action="/logout" method="post" style="margin: 0;">
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
    </div>
</header>
<body>
    <div class="container px-4 py-5" id="custom-cards">
        <h2 class="pb-2 border-bottom">My Favorites</h2>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 align-items-stretch g-4 py-5">
            <% if (favorites.length > 0) { %>
                <% favorites.forEach(fav => { %>
                    <a href="/anime/<%= fav.anime_id %>" style="text-decoration: none;">
                        <div
                            class="card card-cover overflow-hidden text-bg-dark shadow-lg"
                            style="height: 450px; width: 300px; padding-left: 0px;"
                        >
                            <div
                                class="card card-cover overflow-hidden text-bg-dark shadow-lg"
                                style="
                                    height: 380px;
                                    width: 300px;
                                    background-image: url('<%= fav.image_url %>');
                                    background-size: cover;
                                    background-position: center;
                                "
                            >
                            </div>
                            <div
                                class="d-flex flex-column pb-3 pt-3 text-white text-shadow-1"
                                style="text-align: center;"
                            >
                                <h3 class="display-15 lh-1 fw-bold"><%= fav.title %></h3>
                            </div>
                        </div>
                    </a>
                <% }) %>
            <% } else { %>
                <p class="text-center text-white">No favorites found. Start adding some!</p>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
